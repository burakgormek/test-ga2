{
  "include-component-in-tag": true,
  "tag-separator": "@",
  "separate-pull-requests": true,
  "packages": {
    "packages/plugin": {
      "release-type": "node",
      "bump-minor-pre-major": true
    },
    "packages/swc": {
      "release-type": "node",
      "bump-minor-pre-major": true,
      "extra-files": [
        {
          "type": "json",
          "path": "package.json",
          "jsonpath": "$.dependencies['webpack']"
        }
      ]
    },
    "packages/webpack": {
      "release-type": "node",
      "bump-minor-pre-major": true
    }
  },
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
